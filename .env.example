# ===========================================
# CodeChicks Environment Configuration
# ===========================================
# Copy this file to .env and fill in your values

# --- Security ---
# Generate a secure random string for production (e.g., openssl rand -hex 32)
SECRET_KEY=your-super-secret-key-change-in-production

# JWT Configuration
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# --- Database ---
# MongoDB connection string
MONGODB_URI=mongodb://127.0.0.1:27017/?directConnection=true&serverSelectionTimeoutMS=2000
DATABASE_NAME=codechicks

# --- Server ---
HOST=0.0.0.0
PORT=8000
DEBUG=true

# --- CORS ---
# Comma-separated list of allowed origins (use * for development only)
CORS_ORIGINS=*
